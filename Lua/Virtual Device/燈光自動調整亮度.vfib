{"name":"燈光自動調整亮度","type":"virtual_device","properties":{"deviceIcon":0,"currentIcon":"0","log":"","logTemp":"","mainLoop":"--[[\n  @author Lala\n  @date   104.12.07\n  @brief  根據照度調整照明亮度\n  @note   1. button_update 填寫lightSensorID、motionSensorID、tLightID、亮度調節細項\n          2. buttun_關 填寫lightID\n--]]\n\nlocal selfID = fibaro:getSelfId()\n\nwhile 1 do \n  fibaro:call(selfID, \"pressButton\" , \"6\" ) \n  fibaro:sleep(1000)\nend\n\n\n","ui.Label1.value":"關","ui.Label2.value":"0","visible":"true","rows":[{"type":"label","elements":[{"id":1,"lua":false,"waitForResponse":false,"caption":"狀態","name":"Label1","favourite":false,"main":false}]},{"type":"button","elements":[{"id":2,"lua":true,"waitForResponse":false,"caption":"開","name":"Button31","empty":false,"msg":"local selfID = fibaro:getSelfId()\nlocal stateValue = fibaro:getValue( selfID , 'ui.Label1.value' )\nfibaro:call( selfID, \"setProperty\", 'ui.Label1.value', '開' )","buttonIcon":0,"favourite":false,"main":false},{"id":3,"lua":true,"waitForResponse":false,"caption":"關","name":"Button32","empty":false,"msg":"local lightID = 473\n\nlocal selfID = fibaro:getSelfId()\nlocal stateValue = fibaro:getValue( selfID , 'ui.Label1.value' )\nfibaro:call( selfID, \"setProperty\", 'ui.Label1.value', '關' )\nfibaro:call( selfID, \"setProperty\", 'ui.Label2.value', 0 )\nfibaro:call( lightID , \"turnOff\")","buttonIcon":0,"favourite":false,"main":false},{"id":4,"lua":true,"waitForResponse":false,"caption":"自動","name":"Button33","empty":false,"msg":"local selfID = fibaro:getSelfId()\nlocal stateValue = fibaro:getValue( selfID , 'ui.Label1.value' )\nfibaro:call( selfID, \"setProperty\", 'ui.Label1.value', '自動' )","buttonIcon":0,"favourite":false,"main":false}]},{"type":"label","elements":[{"id":5,"lua":false,"waitForResponse":false,"caption":"燈光亮度","name":"Label2","favourite":false,"main":false}]},{"type":"button","elements":[{"id":6,"lua":true,"waitForResponse":false,"caption":"update","name":"Button11","empty":false,"msg":"local lightSensorID = 498    \nlocal motionSensorID = 496\nlocal tLightID = { 473 }\n\n-- 以下為亮度調節細項 --\nlocal lampMax = 90     -- 燈光最大亮度(%)\nlocal lampMin = 10     -- 燈光最小亮度(%)\nlocal luxMax = 1000    -- 當lux高於此值時，調為最小亮度\nlocal luxMin = 100     -- 當lux低於此值時，調為最大亮度\nlocal luxInterval = 20 -- lux數值每間隔多少，調整亮度(一次調1%)\n\n\nlocal selfID = fibaro:getSelfId()\nlocal stateValue = fibaro:getValue( selfID , 'ui.Label1.value' )\n\nfunction Update()\n  local lux = tonumber(fibaro:getValue( lightSensorID , \"value\" ))\n  \n  if ( lux < luxMin ) then\n    lamp = lampMax\n  elseif (( lux > luxMin ) and ( lux < luxMax )) then\n    lightLevel = math.floor( lux / luxInterval )\n    lamp = lampMax - lightLevel\n  else\n    lamp = lampMin\n  end\n  fibaro:call( selfID, \"setProperty\", 'ui.Label2.value', lamp )\n  for i = 1, #tLightID do \n    fibaro:call( tLightID[i] , \"setValue\" , lamp )\n  end\n  fibaro:debug( \"lux: \" .. lux )\n  fibaro:debug(\"lamp: \" .. lamp )\nend\n\nif (stateValue == '開') then  \n  Update()\nelseif (stateValue == '關') then\n  fibaro:debug(\"狀態為關閉\")\nelseif (stateValue == '自動') then  \n  if ( tonumber(fibaro:getValue( motionSensorID , \"value\" )) > 0) then\n    fibaro:debug(fibaro:getValue( motionSensorID , \"value\" ))\n\tUpdate()\n  elseif ( tonumber(fibaro:getValue( motionSensorID , \"value\" )) == 0) then\n    fibaro:call( selfID, \"setProperty\", 'ui.Label2.value', 0 )\n\tfor i = 1, #tLightID do\n  \t  fibaro:call( tLightID[i] , \"turnOff\" )\n    end\n  end\nend\n","buttonIcon":0,"favourite":false,"main":true}]}]},"actions":{"pressButton":1,"setSlider":2,"setProperty":2}}